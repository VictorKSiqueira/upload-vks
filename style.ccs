body {
  background: #121212;
  color: white;
  font-family: Arial, sans-serif;
  text-align: center;
}

.container {
  margin-top: 50px;
}

.logo {
  width: 150px;
  margin-bottom: 20px;
}

input, button {
  padding: 10px;
  margin: 10px;
  border-radius: 5px;
}

button {
  background: #00C853;
  color: white;
  border: none;
  cursor: pointer;
}

button:hover {
  background: #00E676;
}
